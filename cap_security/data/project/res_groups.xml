<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Introduction d'un niveau intermédiaire entre Utilisateur et Administrateur du module Projet -->
    <record id="group_project_creator" model="res.groups">
        <field name="name">Utilisateur &amp; Créateur</field>
        <field name="category_id" ref="base.module_category_services_project"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_user')), (4, ref('analytic.group_analytic_accounting'))]"/>
    </record>

    <record id="project.group_project_manager" model="res.groups">
        <field name="implied_ids" eval="[(6, 0, [ref('group_project_creator')])]"/>
    </record>
</odoo>