<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="custom_external_layout_standard" inherit_id="web.external_layout_standard">

        <!-- Logo de l'entreprise - Adresse - Logo RGE -->
        <xpath expr="//div[contains(@t-attf-class, 'header')]/div" position="replace">
            <div class="row mb8" style="font-size: 0.8em">
                <div class="col-3 mb-1">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 90px;"/>
                </div>
                <div class="col-6 text-center">
                    <span class="mt0" t-field="company.report_header" style="font-size: 10px;"/>
                </div>
                <div class="col-3 text-right">
                    <img t-if="company.logo_certification_rge" t-att-src="image_data_uri(company.logo_certification_rge)" style="max-height: 90px;"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[contains(@t-attf-class, 'header')]/div[3]" position="replace"/>

        <!-- réduction de l'espacement sous l'en-tête -->
        <xpath expr="//t[@t-call='web.address_layout']/parent::div" position="attributes">
            <attribute name="class">pt-1</attribute>
        </xpath>

        <!-- remplacement du footer-->
        <xpath expr="//div[contains(@t-attf-class, 'footer')]/div" position="replace">
            <div class="text-center" style="border-top: 1px solid black; font-size: 0.8em">
                Page: <span class="page"/> / <span class="topage"/>
                <div t-field="company.report_footer" widget="html" />
            </div>
        </xpath>
    </template>
</odoo>
