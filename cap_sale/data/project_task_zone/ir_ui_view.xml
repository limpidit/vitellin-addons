<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_task_zone_form_view_inherit" model="ir.ui.view">
        <field name="name">project.task.zone.form.view</field>
        <field name="model">project.task.zone</field>
        <field name="inherit_id" ref="cap_project.project_task_zone_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="go_to_sale_orders" type="object" icon="fa-usd" invisible="sale_order_count == 0"
                        groups="sales_team.group_sale_salesman">
                    <field string="Devis" name="sale_order_count" widget="statinfo"/>
                </button>
            </xpath>

            <xpath expr="//sheet" position="inside">
                <header>
                    <button name="action_generate_sale_order" type="object" class="btn-primary"
                        groups="sales_team.group_sale_salesman" string="Générer un devis"/>
                </header>
            </xpath>
        </field>
    </record>

    <record id="project_task_zone_tree_view" model="ir.ui.view">
        <field name="name">project.task.zone.tree.view</field>
        <field name="model">project.task.zone</field>
        <field name="inherit_id" ref="cap_project.project_task_zone_tree_view" />
        <field name="arch" type="xml">
            <field name="project_id" position="before">
                <header>
                    <button name="action_generate_sale_order" type="object" class="btn-primary"
                        groups="sales_team.group_sale_salesman" string="Générer un devis"/>
                </header>
            </field>

            <field name="type_travaux" position="after">
                <field name="sale_order_ids" groups="sales_team.group_sale_salesman" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>