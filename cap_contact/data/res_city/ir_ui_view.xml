<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_city_tree_view" model="ir.ui.view">
        <field name="name">res.city.tree.view</field>
        <field name="model">res.city</field>
        <field name="inherit_id" ref="base_address_city.view_city_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                 <field name="zipcode" position="move" />
            </field>
            <field name="state_id" position="after">
                <field name="country_id" position="move"/>
                <field name="zone_geographique" />
                <field name="latitude" />
                <field name="longitude" />
            </field>
        </field>
    </record>

    <record id="res_city_search_view" model="ir.ui.view">
        <field name="name">res.city.search.view</field>
        <field name="model">res.city</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="zipcode"/>
            </search>
        </field>
    </record>

    <record id="action_res_city" model="ir.actions.act_window">
        <field name="name">Villes et Codes postaux</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.city</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_res_city"
        action="action_res_city"
        name="Villes et Codes postaux" parent="contacts.res_partner_menu_config"
        sequence="4"/>
</odoo>