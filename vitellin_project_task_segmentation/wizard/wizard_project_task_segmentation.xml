<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_project_task_segmentation_form" model="ir.ui.view">
        <field name="name">wizard.project.task.segmentation.form</field>
        <field name="model">wizard.project.task.segmentation</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="generation_mode" widget="radio" options="{'horizontal': true}"/>
                </group>

                <notebook invisible="generation_mode != 'segmented'">
                    <page string="Fragmentation">
                        <field name="line_ids" widget="section_and_note_one2many" mode="tree">
                            <tree editable="bottom">
                                <control>
                                    <create name="add_section_control" string="Ajouter une Phase"
                                            context="{'default_display_type': 'line_section'}"/>
                                </control>

                                <field name="sequence" widget="handle"/>
                                <field name="display_type" column_invisible="True"/>
                                
                                <field name="name" widget="section_and_note_text"/>
                                
                                <field name="product_id" readonly="1" optional="show"/>
                                <field name="sale_line_id" column_invisible="True"/>
                            </tree>
                        </field>
                        <div class="text-muted" style="margin-top: 10px;">
                            <i class="fa fa-info-circle"/> Glissez-déposez les lignes pour les organiser. 
                            Chaque section (en gras) créera un chantier distinct (P1, P2...).
                            L'ordre des sections détermine le numéro de la phase.
                        </div>
                    </page>
                </notebook>

                <footer>
                    <button name="generate_construction_sites" string="Générer les chantiers" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
