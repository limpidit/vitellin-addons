<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_advance_payment_inv_vitellin" model="ir.ui.view">
        <field name="name">sale.advance.payment.inv.form.vitellin</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='advance_payment_method']" position="after">
                <field name="is_fragmented_invoicing" invisible="advance_payment_method != 'delivered'" widget="boolean_toggle"/>
                <field name="fragmented_task_ids" widget="many2many_tags" options="{'no_create': True}"
                    invisible="not is_fragmented_invoicing or advance_payment_method != 'delivered'"
                    required="is_fragmented_invoicing and advance_payment_method == 'delivered'"/>
                
            </xpath>

            <xpath expr="//footer" position="before">
                <div class="text-muted" 
                    invisible="not is_fragmented_invoicing or advance_payment_method != 'delivered'">
                    <i class="fa fa-info-circle"/> 
                    Odoo va générer une facture standard, puis retirer automatiquement les lignes qui ne concernent pas les chantiers sélectionnés.
                </div>
            </xpath>

        </field>
    </record>

</odoo>
