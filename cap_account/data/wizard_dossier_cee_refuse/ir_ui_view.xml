        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="invoice_ids" invisible="1" />
                    <div invisible="not error_msg" class="alert alert-danger" role="alert">
                        <field name="error_msg" />
                    </div>

                    <group string="Refus du dossier par l'obligÃ©">
                        <field name="date_refus_dossier" string="Date" />
                        <field name="motif_dossier_refuse" string="Motif"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmer" class="btn btn-primary" type="object" name="action_declarer_dossier_refuse" invisible="error_msg"/>
                    <button string="Annuler" class="btn-secondary" special="cancel" invisible="error_msg"/>
                    <button string="Fermer" class="btn-secondary" special="cancel" invisible="not error_msg"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>