<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/header" position="inside">
                <field name="sale_id" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='extra']/group" position="inside">
                <group string="Chantier" invisible="not sale_id">
                    <field name="project_id" />
                    <field name="chantier_id" context="{'show_standard_displayname': True}"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='forecast_availability']" position="after">
                <field name="chantier_quantite_a_charger" column_invisible="not parent.sale_id"/>
            </xpath>

            <field name="move_ids_without_package" position="after">
                <field name="chantier_mention_particulière" placeholder="Mentions particulières..." invisible="not sale_id"/>
            </field>
        </field>
    </record>
</odoo>