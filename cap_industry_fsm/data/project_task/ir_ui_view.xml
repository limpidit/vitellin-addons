<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_task_view_form" model="ir.ui.view">
        <field name="name">project.task.view.form.document.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            
            <header position="inside">
                <button name="action_fsm_done" string="Terminer" type="object" invisible="stage_id == %(project_task_type_realise)d" 
                    icon="fa-check-square-o" class="btn-primary" />
                <button name="go_to_folder" string="Consulter dossier" type="object" icon="fa-file-text" class="oe_read_only"/>
            </header>

            <xpath expr="//sheet/group/group/field[@name='project_id']" position="after">
                <field name="numero_chantier" invisible="type_tache != 'chantier'"/>
                <field name="numero_semaine" />
                <field name="planned_hours" widget="float_time" />
            </xpath>
        </field>
    </record>

    <record id="cap_industry_fsm_view_task_form2_inherit" model="ir.ui.view">
        <field name="name">cap.industry.fsm.view.task.form2.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.view_task_form2_inherit"/>
        <field name="arch" type="xml">
            <field name="partner_phone" position="attributes"><attribute name="invisible">1</attribute></field>
            <field name="partner_phone" position="after">
                <field name="address_mobile" />
            </field>
        </field>
    </record>

    <record id="project_task_map_view" model="ir.ui.view">
        <field name="name">project.task.view.map</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project_enterprise.project_task_map_view"/>
        <field name="arch" type="xml">
            <xpath expr="//map" position="attributes">
                <attribute name="res_partner">address_id</attribute>
                <attribute name="hide_name">true</attribute>
                <attribute name="hide_address">true</attribute>
            </xpath>

            <map position="inside">
                <field name="partner_id" string="Client" />
                <field name="project_id" string="Projet" />
                <field name="date_debut_intervention" string="Date souhaitée"/>
                <field name="type_travaux_str" string="Type de travaux"/>
                <field name="type_vehicule_str" string="Type véhicule"/>
            </map>
            
            <field name="planned_date_begin" position="replace" />
        </field>
    </record>

    <record id="cap_industry_fsm_project_task_map_view_fsm" model="ir.ui.view">
        <field name="name">capt.industry.fsm.project.task.map.view.fsm</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.project_task_map_view_fsm"/>
        <field name="arch" type="xml">
            
            <field name="partner_phone" position="before">
                <field name="address_street" string="Adresse intervention"/>
                <field name="address_zip" string="" />
                <field name="address_city" string="" />
            </field>

            <field name="partner_phone" position="after">
                <field name="address_mobile" string="Mobile"  />
                <field name="user_id" string="Assigné à"/>
                <field name="type_vehicule_str" string="Type véhicule"/>
            </field>
            
        </field>
    </record>

    <record id="cap_industry_fsm_project_task_view_calendar_fsm" model="ir.ui.view">
        <field name="name">cap.industry.fsm.project.task.view.calendar.fsm</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.project_task_view_calendar_fsm"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="mode">week</attribute>
            </xpath>

            <field name="name" position="after">
                <field name="type_travaux_str" string="Type de travaux"/>
            </field>

            <field name="partner_id" position="after">
                <field name="address_street" string="Adresse intervention"/>
                <field name="address_zip" string="Code postal" />
                <field name="address_city" string="Ville" />
                <field name="address_mobile" />
                <field name="type_vehicule_str" string="Type véhicule"/>
                <field name="vehicule" string="Véhicule"/>
            </field>

            <field name="name" position="attributes"><attribute name="invisible">1</attribute></field>
            <field name="partner_phone" position="attributes"><attribute name="invisible">1</attribute></field>
        </field>
    </record>

    <!-- Vue recherche : ajout du filtre réalisé -->
    <record id="project_task_view_search_fsm" model="ir.ui.view">
        <field name="name">project.task.search.fsm</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.project_task_view_search_fsm"/>
        <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="numero_semaine" string="N° Semaine" />
                </field>
                <!-- TODO Limpidit : Voir Filtres avec Paul -->
                <!-- <xpath expr="//filter[@name='todo']" position="replace">
                    <filter string="A réaliser" name="todo" domain="[('stage_id', '=', %(cap_industry_fsm.project_task_type_a_realiser)d)]"/>
                    <filter string="Réalisé" name="done" domain="[('stage_id', '=', %(cap_industry_fsm.project_task_type_realise)d)]"/>
                </xpath> -->
                <group position="inside">
                    <filter string="Véhicule" name="groupby_vehicule" context="{'group_by':'vehicule'}"/>
                    <filter string="Titre" name="groupby_name" context="{'group_by':'name'}"/>
                </group>
        </field>
    </record>

