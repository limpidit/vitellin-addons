<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.documents</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="documents.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='documents']" position="inside">
                <block>
                    <setting id="project_company_folder_setting" string="Répertoire projet dédié à la société">
                        <div class="content-group">
                            <div class="row mt16">
                                <field name="project_company_folder_id"
                                    domain="[('parent_folder_id', '=', %(cap_project.document_folder_root_projects)d)]"
                                    context="{'default_parent_folder_id': %(cap_project.document_folder_root_projects)d}"
                                    required="1"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>