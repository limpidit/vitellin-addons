<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="type_travaux_product_category_tree_view" model="ir.ui.view">
        <field name="name">type.travaux.product.category.tree.view</field>
        <field name="model">type.travaux.product.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence"              widget="handle"/>
                <field name="type_travaux"          invisible="1"/>
                <field name="category_id"           options="{'no_open': True, 'no_create': True}"/>
                <field name="default_product_id"    options="{'no_open': True, 'no_create': True}"/>
            </tree>
        </field>
    </record>
</odoo>